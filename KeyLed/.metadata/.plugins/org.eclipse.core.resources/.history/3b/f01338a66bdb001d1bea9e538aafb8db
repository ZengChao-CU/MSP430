#include "led.h"

void LED_Init(void)//led初始化函数
{
    P1SEL &= ~BIT0; //设置P1.0口为通用I/O
       P4SEL &= ~BIT7; //设置p4.7口为通用I
    P1DIR |= BIT0;   //设置P1.0口为输出模式
    P4DIR |= BIT7;   //设置p4.7口为输出模式

    //    P1OUT|=BIT0;     //高电平点灯
    //    P4OUT|=BIT7;     //高电平点灯
        P1OUT&=~BIT0;   //低电平熄灯
        P4OUT&=~BIT7;   //低电平熄灯
}
